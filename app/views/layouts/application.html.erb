<!DOCTYPE html>
<html>
  <head>
    <title>MyBookReview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to("MyBookReview", "/") %>
      </div>
      <ul class="header-menus">
        <li>
          <%= link_to("What is 'MyBookReview'", "/about") %>
        </li>
        <li>
          <%= link_to("Reviews", "/posts/index") %>
        </li>
      </ul>
    </header>
    <%= yield %>
  </body>
</html>